######################
##  COMMON COMMAND  ##
######################

## launch terminal
super + Return
	termite	

## launch alternative terminal
super + shift + Return
	urxvt

## volume control
XF86AudioRaiseVolume
	amixer -D pulse sset Master '5%+'
XF86AudioLowerVolume
	amixer -D pulse sset Master '5%-'
XF86AudioMute
	amixer set Master toggle

## music control
XF86AudioNext
	mpc next
XF86AudioPrev
	mpc prev
XF86AudioPlay
	mpc toggle
XF86AudioStop
	mpc stop

## program launcher
super + shift + d
	dmenu_run -i -b -nb '#222222' -nf '#efefef' -sb '#222222' -sf '#cb6077' -fn 'Roboto:regular:pixelsize=12'
super + d
	rofi -show drun -font 'Roboto Regular 8'

## make sxhkd reload its configuration files
super + s
	pkill -USR1 -x sxhkd
	
## launch thunar
super + shift + f
	thunar
	
## launch chromium
super + shift + w
	chromium
	
## launch skippy-xd. actually useless for tiling wm, but it just looks nice XD
super + Tab
	skippy-xd

## fancy lockscreen :)
super + l
	i3lock-fancy
	
## take a screenshot
Print
	scrot 'scrot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~ ; viewnior ~/$f'


######################
##  BSPWM COMMANDS  ##
######################

## quit bspwm normally
super + control + Escape
	bspc quit

## reload bspwm config
super + shift + BackSpace
	~/.config/bspwm/bspwmrc

## close and kill app
super + Escape
	bspc node -{c,k}

## fullscreen
super + f
	bspc desktop -l next

## if the current node is automatic, send it to the last manual, otherwise pull the last leaf
#super + y
#	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

## swap the current node and the biggest node
#super + g
#	bspc node -s biggest

## set the window state
super + {t,p,space}
	bspc node -t {tiled,pseudo_tiled,floating}

## set the node flags
#super + ctrl + {x,y,z}
#	bspc node -g {locked,sticky,private}

## focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

## focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

## focus the next node in the current desktop
alt + Tab
	bspc node -f next.local

## focus the next/previous desktop in the current monitor
## i'm using control + alt + left/right. you know what they say? old habit, they die hard :D
ctrl + alt + Left
	bspc desktop -f prev.local
ctrl + alt + Right
	bspc desktop -f next.local

## focus the last node/desktop
#super + {Tab,grave}
#	bspc {node,desktop} -f last

## focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

## focus or send to the given desktop
#super + {_,shift + }{1-9,0}
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

super + 1
	bspc desktop --focus^1:^1; \
	bspc desktop --focus^2:^1; \

super + 2 
	bspc desktop --focus^1:^2; \
	bspc desktop --focus^2:^2; \

super + 3 
	bspc desktop --focus^1:^3; \
	bspc desktop --focus^2:^3; \

super + 4 
	bspc desktop --focus^1:^4; \
	bspc desktop --focus^2:^4; \

super + 5 
	bspc desktop --focus^1:^5; \
	bspc desktop --focus^2:^5; \

super + 6 
	bspc desktop --focus^1:^6; \
	bspc desktop --focus^2:^6; \

super + 7 
	bspc desktop --focus^1:^7; \
	bspc desktop --focus^2:^7; \

super + 8 
	bspc desktop --focus^1:^8; \
	bspc desktop --focus^2:^8; \
	
